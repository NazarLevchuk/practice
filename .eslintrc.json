{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
		"react/prop-types": "off",
    "import/prefer-default-export": "off",
    "prettier/prettier": ["error", { "singleQuote": true, "endOfLine": "auto" }]
  }
}
